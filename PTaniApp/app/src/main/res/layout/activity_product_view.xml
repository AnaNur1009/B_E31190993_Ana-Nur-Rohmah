<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/window_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/apv_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true" />

                        <ProgressBar
                            android:layout_gravity="center"
                            android:id="@+id/progressbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/apv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mosistick CornDog"
                            android:textColor="#222831"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:visibility="visible" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:layout_width="196dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="4.8"
                            android:textColor="@color/primary_text"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>


                    <com.banenos.labs.ptaniapp.customfonts.MyTextView
                        android:id="@+id/apv_attribute"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <com.banenos.labs.ptaniapp.customfonts.MyTextView
                        android:id="@+id/disc1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                <!--*********discription**********-->
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:text="Siapa ni yang blom coba Mosistick CornDog? Perpaduan antara moztick dan sosis, Gak akan bkin kalian kecewa deh."
                        android:id="@+id/apv_description"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/apv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Rp."
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/apv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="750"
                        android:textColor="@color/primary_text"
                        android:textSize="30dp" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/return1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/return2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/guarantee1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/guarantee2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                <LinearLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:id="@+id/quantity_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="11dp"
                            android:background="@drawable/shop_button_bg"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/quantity_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="12dp"
                                android:paddingTop="5dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="5dp"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quantity_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingLeft="12dp"
                                android:paddingTop="5dp"
                                android:paddingRight="12dp"
                                android:paddingBottom="5dp"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/add_to_cart_ll"
                        android:layout_width="461dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_primary"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.banenos.labs.ptaniapp.customfonts.MyTextView
                            android:id="@+id/addtocart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Add to cart"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/colordevider"

                        />

                    <LinearLayout
                        android:background="@drawable/bg_minus"
                        android:padding="13dp"
                        android:id="@+id/apv_share"
                        android:layout_width="200dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:src="@drawable/ic_share"/>

                        <com.banenos.labs.ptaniapp.customfonts.MyTextView
                            android:id="@+id/share"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/colordevider"


                        />


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



